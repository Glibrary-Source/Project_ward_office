<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners android:radius="8dp" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp" />
            <solid android:color="@android:color/holo_blue_light" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners android:radius="8dp" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp" />
            <solid android:color="@color/backgroundLightYellow"/>
        </shape>
    </item>
</selector>