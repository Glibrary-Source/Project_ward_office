                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/yongsan"/>
                <Button
                    android:id="@+id/filter_button_ep"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/ep"/>
                <Button
                    android:id="@+id/filter_button_jongno"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/jongno"/>
                <Button
                    android:id="@+id/filter_button_junggu"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/junggu"/>
                <Button
                    android:id="@+id/filter_button_jungnang"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/jungnang"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/imgMore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:animateLayoutChanges="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="75dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/title_button"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:text="@string/menu"
                android:textStyle="bold"
                android:background="@drawable/border_imgview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layout_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/filter_button_all"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_list_imgview"
                android:textStyle="bold"
                android:text="@string/buttonAll"/>

            <Button
