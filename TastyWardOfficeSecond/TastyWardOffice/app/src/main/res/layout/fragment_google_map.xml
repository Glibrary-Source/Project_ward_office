                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_list_imgview"
                android:textStyle="bold"
                android:text="@string/japan"/>
            <Button
                android:id="@+id/filter_button_korean"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_list_imgview"
                android:textStyle="bold"
                android:text="@string/korean"/>
            <Button
                android:id="@+id/filter_button_china"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_list_imgview"
                android:textStyle="bold"
                android:text="@string/chines"/>
            <Button
                android:id="@+id/filter_button_kimbap"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_list_imgview"
                android:textStyle="bold"
                android:text="@string/kimbap"/>
