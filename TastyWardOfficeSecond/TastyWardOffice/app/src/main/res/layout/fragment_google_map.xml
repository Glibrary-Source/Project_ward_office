                    android:id="@+id/filter_button_dobong"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/dobong"/>
                <Button
                    android:id="@+id/filter_button_ddm"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/ddm"/>
                <Button
                    android:id="@+id/filter_button_dongjak"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/dongjak"/>
                <Button
                    android:id="@+id/filter_button_mapo"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/mapo"/>
                <!--15개 구-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_expand3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <Button
                    android:id="@+id/filter_button_sdm"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/sdm"/>
                <Button
                    android:id="@+id/filter_button_seocho"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/seocho"/>
                <Button
                    android:id="@+id/filter_button_sd"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/sd"
                    android:layout_gravity="right"/>
                <Button
                    android:id="@+id/filter_button_sb"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/sb"/>
                <Button
                    android:id="@+id/filter_button_songpa"
