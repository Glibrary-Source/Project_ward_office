                    android:text="@string/geumcheon"/>
                <Button
                    android:id="@+id/filter_button_nowon"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_list_imgview"
                    android:textStyle="bold"
                    android:text="@string/nowon"/>
