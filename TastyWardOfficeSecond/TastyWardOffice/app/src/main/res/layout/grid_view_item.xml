<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="368dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round_image"
        android:padding="1dp">

        <TextView
            android:id="@+id/name_store"
            android:layout_width="184dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="35dp"
            android:fontFamily="@font/notoserifkr_bold"
            android:gravity="top"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="상호명" />

        <TextView
            android:id="@+id/price_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoserifkr_bold"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/name_store"
            app:layout_constraintTop_toBottomOf="@id/name_store" />

        <ImageView
            android:id="@+id/menu_image"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_margin="0.6dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/border_greed_item_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:textSize="12sp"
            tools:text="hellowWorld"
            app:layout_constraintStart_toEndOf="@id/name_store"
            app:layout_constraintTop_toTopOf="@id/name_store"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>